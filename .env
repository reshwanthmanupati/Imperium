# Imperium Production Environment Configuration
# Raspberry Pi 4 - Linux Deployment
# Generated: 2026-01-13

# MQTT Broker Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_USE_TLS=false
MQTT_CA_CERT_PATH=
MQTT_CLIENT_CERT_PATH=
MQTT_CLIENT_KEY_PATH=

# Prometheus Configuration
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_RETENTION_DAYS=15

# Grafana Configuration
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=imperium2026

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=false
API_SECRET_KEY=imperium-pi-production-secret-key-2026-01-13-$(openssl rand -hex 16)
API_CORS_ORIGINS=http://localhost:3000,http://10.15.198.192:3000

# Authentication (JWT)
JWT_ENABLED=true
JWT_SECRET_KEY=imperium-jwt-secret-production-$(openssl rand -hex 32)
JWT_EXPIRATION_HOURS=24
JWT_ALGORITHM=HS256

# Network Enforcement - REAL LINUX ENFORCEMENT ENABLED
NETWORK_INTERFACE=eth0
NETWORK_FALLBACK_INTERFACE=wlan0
ENFORCEMENT_DRY_RUN=false
ENFORCEMENT_TIMEOUT_MS=5000

# Device Configuration
CONFIG_DEVICES_PATH=config/devices.yaml
CONFIG_INTENT_GRAMMAR_PATH=config/intent_grammar.yaml
CONFIG_POLICY_TEMPLATES_PATH=config/policy_templates.yaml

# Feedback Loop
FEEDBACK_ENABLED=true
FEEDBACK_CHECK_INTERVAL_SECONDS=30
FEEDBACK_VIOLATION_THRESHOLD=3
FEEDBACK_HISTORY_SIZE=1000

# Persistence
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///data/imperium.db
DATABASE_POOL_SIZE=5
DATABASE_ECHO=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/imperium.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=8000
METRICS_PATH=/metrics

# System Limits
MAX_INTENTS=1000
MAX_POLICIES=5000
MAX_DEVICES=100
POLICY_ENFORCEMENT_TIMEOUT=500

# Production Settings
DEBUG=false
TESTING=false
MOCK_NETWORK_ENFORCEMENT=false
MOCK_MQTT_BROKER=false

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
ALLOWED_HOSTS=*
CORS_ALLOW_CREDENTIALS=true

# Raspberry Pi Specific
RPI_CPU_THRESHOLD=60
RPI_MEMORY_THRESHOLD=70
RPI_TEMP_THRESHOLD=70
